{
  "name": "cms",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "npx turbo dev",
    "lint": "turbo lint",
    "lint:fix": "eslint --max-warnings 0 --config .eslintrc . --fix",
    "format:fix": "prettier --write \"**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json}\"",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "dev:docker": "npm run prisma:docker & yarn run dev",
    "prisma:docker": "cd packages/database && npm run prisma:migrate && npm run db:seed && npm run studio"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "husky": "^9.0.7",
    "lint-staged": "^15.2.1",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.1",
    "turbo": "^2.0.1"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.21",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {}
}
